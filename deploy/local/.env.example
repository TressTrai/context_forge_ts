# Local VPN deployment configuration
# Copy to ~/contextforge/.env and fill in values

# Convex instance secret (generate with: openssl rand -hex 32)
CONVEX_INSTANCE_SECRET=

# Server IP on VPN (default: 192.168.87.58)
SERVER_IP=192.168.87.58

# Admin key (generate with Docker):
#   docker run --rm --entrypoint ./generate_key ghcr.io/get-convex/convex-backend:latest contextforge <INSTANCE_SECRET>
# Not used by pm2, but save here for reference
CONVEX_ADMIN_KEY=
